&
  display flex
  flex-wrap nowrap
  flex-direction column
  overflow hidden

&.horizontal > .windows
  flex-direction row

&.vertical > .windows
  flex-direction column

&.tabbed > .windows
  position relative
  transition left $speed
  & > .window
    flex-basis 100%
    flex-shrink 0
    border none

& > .tabs
  display flex
  flex-flow row nowrap
  background $background
  color $foreground
  position relative
  z-index 0
  & > .selector
    background $foreground
    position absolute
    top 0
    bottom 0
    z-index -1
    transition left $speed, right ($speed / 1.5)
  & > .tab
    flex-grow 1
    flex-basis 0
    padding 5px
    text-overflow ellipsis
    overflow hidden
    white-space nowrap
    transition color $speed
    &:not(:first-child)
      border-left $border-size solid $foreground
    &.selected
      color $background
    &:not(.selected)
      cursor pointer

& > .windows
  display flex
  flex-grow 1
  flex-wrap nowrap
  & > .window
    flex-basis 0
    flex-grow 1
    border $border-size solid $background
    &.last-selected
      border-color darken($foreground, 50%)
    &.selected
      border-color $foreground
