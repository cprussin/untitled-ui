&
  display flex
  flex-wrap nowrap
  flex-direction column
  overflow hidden

&.horizontal > .windows
  flex-direction row

&.vertical > .windows
  flex-direction column

&.tabbed > .windows
  position relative
  transition left $speed
  & > .window
    flex-basis 100%
    flex-shrink 0
    border none

& > .tabs
  display flex
  flex-flow row nowrap
  background $background
  color $foreground
  & > .tab
    flex-grow 1
    flex-basis 0
    padding 5px
    text-overflow ellipsis
    overflow hidden
    white-space nowrap
    transition border-color $speed, background $speed, color $speed
    &:not(:first-child)
      border-left $border-size solid $foreground
    &.selected
      border-color $foreground
      background $foreground
      color $background
    &:not(.selected)
      cursor pointer

& > .windows
  display flex
  flex-grow 1
  flex-wrap nowrap
  & > .window
    flex-basis 0
    flex-grow 1
    border $border-size solid $background
    &.selected-leaf
      border-color $foreground
