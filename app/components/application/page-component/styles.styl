&, ul
  width 100%
  height 100%
  border 0
  padding 0
  margin 0
  display flex
  flex-wrap nowrap

.vertical
  flex-direction column

.vertical > ul, .vertical > li
  width: 100%

.horizontal
  flex-direction: row

.horizontal > ul, .horizontal > li
  height: 100%

li
  flex-grow 1
  border 1px solid darkgrey
  position relative

webview
  width 100%
  height 100%
  position absolute
