&, .window-manager, .app-launcher,
.launcher, .launcher > .liquid-child
& > .status, & > .status > .liquid-child
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  width 100%
  height 100%

& > .status
  pointer-events none
  z-index 1

  .status-bar
    pointer-events all

.volume-overlay
  pointer-events none
  z-index 2
  position: absolute
  width 240px
  height 100px
  right 10%
  bottom 10%

  & > .liquid-child
    title-text()
    width 100%
    height 100%
    display flex
    align-items center
    justify-content center
    background rgba(0, 0, 0, 75%)
    color white
    font-size 3em
    border-radius 10px

    &:before
      icon 'volume'
      font-size 1.5em
      margin-right 20px

    &:after
      content '%'

  &.mute > .liquid-child
    color gray
    &:before
      icon 'mute'

.launcher
  pointer-events none
  z-index 1

.app-launcher
  pointer-events all
