&
  position absolute
  top 0
  right 70px
  border-radius 10px
  border-top-left-radius 0
  border-top-right-radius 0
  background rgba(0, 0, 0, 0.5)
  display flex
  padding 10px 20px
  color white
  font-weight bold

& > div

  &:not(:first-child)
    margin-left 20px

  &:before
    margin-right 5px

.volume
  &.mute
    color gray
    &:before
      icon 'mute'
  &:not(.mute):before
    icon 'volume'

.networks > .liquid-child
  display flex

  .network
    display flex
    align-items center

    &:not(:first-child)
      margin-left 20px

    &:before
      margin-right 5px

    &.wireless
      &:before
        icon 'wifi'
      .ssid
        padding-right 5px

    &.ethernet:before
      icon 'ethernet'

.battery:before
  icon 'battery'

.battery:after, .volume:after
  content '%'
