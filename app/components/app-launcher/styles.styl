&
  position relative
  display flex
  flex-flow column nowrap
  align-items center
  justify-content center
  background rgba(0, 0, 0, .75)

.background, .background > .liquid-child, .background > .liquid-child > img
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  z-index -2

.background > .liquid-child
  background url('background.jpg')
  background-size cover
  background-position center

.status
  display flex
  justify-content flex-end
  position absolute
  top 0
  left 0
  right 0
  padding 10px 20px
  color white
  font-weight bold

  & > div
    margin-left 20px

    &:before
      margin-right 5px

  .volume
    &.mute
      color gray
      &:before
        icon 'mute'
    &:not(.mute):before
      icon 'volume'

  .network:before
    icon 'wifi'

  .battery:before
    icon 'battery'

  .battery:after, .volume:after
    content '%'

.date
  color white
  width 100%
  font-size 1.4em
  text-align center
  margin-top 175px
  margin-bottom 20px
  font-weight bold

.clock
  color white
  font-weight bold
  font-size 1.7em
  border 3px solid white
  height 3em
  padding 0 20px
  background rgba(0, 0, 0, 0.5)
  border-radius 3px

input
  background transparent
  outline none
  border none
  border-bottom 2px solid white
  width 30%
  line-height 2em
  font-size 2em
  color white
  padding 3em 20px 5px 20px
  text-align center
  transition color .5s, border-color .5s, width .5s

  &:focus
    color cyan
    border-color cyan

  &:focus, &.open
    width 60%

.spacer
  flex-grow 1
